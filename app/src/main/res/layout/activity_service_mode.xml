<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_common_toolbar" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="start_service"
        android:padding="10dp"
        android:background="@color/color_dfdfdf"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="bind_service"
        android:padding="10dp"
        android:background="@color/color_dfdfdf"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/tv_start"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tv_stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="stop_service"
        android:padding="10dp"
        android:background="@color/color_dfdfdf"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_start" />

    <TextView
        android:id="@+id/tv_unbind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="unbind_service"
        android:padding="10dp"
        android:background="@color/color_dfdfdf"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/tv_start"
        app:layout_constraintTop_toBottomOf="@id/tv_bind" />




</android.support.constraint.ConstraintLayout>