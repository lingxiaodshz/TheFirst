<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_fade"
        style="@style/common_text_button_style"
        android:text="fade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tv_explode"
        style="@style/common_text_button_style"
        android:text="explode"
        app:layout_constraintLeft_toRightOf="@id/tv_fade"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tv_slide"
        style="@style/common_text_button_style"
        android:text="slide"
        app:layout_constraintLeft_toRightOf="@id/tv_explode"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


</android.support.constraint.ConstraintLayout>